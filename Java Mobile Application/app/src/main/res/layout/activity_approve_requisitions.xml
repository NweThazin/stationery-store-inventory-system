<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_approve_requisitions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adprojectsa43_team1.adprojectsa43_team1.ApproveRequisitions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/requisitionList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:layout_weight="0.99" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/dephead_nav"
        android:layout_gravity="start"
        android:id="@+id/nav_depthead_view">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
