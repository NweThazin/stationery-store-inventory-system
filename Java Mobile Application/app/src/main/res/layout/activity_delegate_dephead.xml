<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_delegate_dephead"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adprojectsa43_team1.adprojectsa43_team1.CurrentDeptHead">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/blackcolor"
            android:id="@+id/txtcurrentDeptHead" />

        <TextView
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/blackcolor"
            android:text="Delegation Duration"
            android:id="@+id/delegationduration"/>

        <TableRow
            android:weightSum="1"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="0.70"
                android:textColor="@color/blackcolor"
                android:text="Start Date :"
                android:id="@+id/startDate"/>

            <TextView
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="0.30"
                android:textColor="@color/blackcolor"
                android:id="@+id/txtStartDate"/>

        </TableRow>

        <TableRow
            android:weightSum="1"
            android:paddingLeft="5dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="0.70"
                android:textColor="@color/blackcolor"
                android:text="End Date :"
                android:id="@+id/endDate"/>

            <TextView
                android:gravity="left"
                android:textSize="15dp"
                android:layout_weight="0.30"
                android:textColor="@color/blackcolor"
                android:id="@+id/txtEndDate"/>

        </TableRow>

        <Button
            android:id="@+id/btnAssignDelegateHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/whitecolor"
            android:background="@drawable/green_roundbtn"
            android:text="Delegate Dept Head"/>

        <Button
            android:id="@+id/btnCancelDelegate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/whitecolor"
            android:background="@drawable/green_roundbtn"
            android:text="Cancel Delegation"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/dephead_nav"
        android:layout_gravity="start"
        android:id="@+id/nav_depthead_view">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
