<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_collection_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adprojectsa43_team1.adprojectsa43_team1.CurrentCollectionPoint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackcolor"
            android:id="@+id/txtCurrentCollectionPoint"/>
        <Button
            android:id="@+id/btnChangeCollectionPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/whitecolor"
            android:background="@drawable/green_roundbtn"
            android:text="@string/changecp"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/dephead_nav"
        android:layout_gravity="start"
        android:id="@+id/nav_depthead_view">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
